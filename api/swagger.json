{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "API to manage resource and alert.",
        "title": "middleware/project",
        "contact": {
            "name": "Baye serigne Seck.",
            "email": "Baye_Serigne.SECK@etu.uca.fr"
        },
        "version": "1.0.0"
    },
    "basePath": "/",
    "paths": {
        "/alerts": {
            "get": {
                "description": "Récupère toutes les alertes enregistrées",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Alertes"
                ],
                "summary": "Liste toutes les alertes",
                "responses": {
                    "500": {
                        "description": "Erreur lors de la récupération des alertes",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "Crée une nouvelle alerte associée à une ressource",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Alertes"
                ],
                "summary": "Crée une alerte",
                "responses": {
                    "400": {
                        "description": "Données invalides",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Impossible de créer l'alerte",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/resources": {
            "get": {
                "description": "Récupère la liste de toutes les ressources disponibles",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Ressources"
                ],
                "summary": "Liste toutes les ressources",
                "responses": {
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "Crée une nouvelle ressource avec un nom et un identifiant UCA",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Ressources"
                ],
                "summary": "Crée une ressource",
                "responses": {
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/resources/{id}": {
            "put": {
                "description": "Met à jour une ressource via son ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Ressources"
                ],
                "summary": "Met à jour une ressource",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID de la ressource",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Resource updated successfully",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "description": "Supprime une ressource via son ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Ressources"
                ],
                "summary": "Supprime une ressource",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID de la ressource",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Resource deleted successfully",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid ID",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}